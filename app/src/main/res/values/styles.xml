<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="DrawerTheme" parent="AppTheme" />

    <style name="ButtonFlat" parent="android:Widget.DeviceDefault.Button.Borderless.Small">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/flat_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="ButtonRaise" parent="android:Widget.DeviceDefault.Button.Borderless.Small">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/raised_button_accent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRaiseInverted" parent="ButtonRaise">
        <item name="android:background">@drawable/raised_button_accent_inverted</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="StartRatingBar" parent="android:Widget.DeviceDefault.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:color">@color/accent</item>
    </style>


</resources>
